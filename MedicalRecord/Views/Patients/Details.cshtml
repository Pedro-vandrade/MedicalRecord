            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>

        @* --- ADMINISTRATIVE --- *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRegistered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRegistered)
        </dd>
    </dl>
</div>
