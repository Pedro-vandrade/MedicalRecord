@model MedicalRecord.Models.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Patient Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        @* --- CORE DEMOGRAPHICS --- *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
